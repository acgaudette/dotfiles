#!/usr/bin/env bash

DIR=gthumb
IMG=feh
VID=ffplay
MUS=ffplay
PDF=evince #okular

for i in "$@"
  do
    if [ -d "$i" ]; then
      $DIR "$i" &
      continue
    elif [ ! -f "$i" ]; then
      echo open: Target does not exist!
      continue
    fi

    type=`echo "$i" | awk -F '.' '{print $NF}'`

    case $type in
      png)
        $IMG "$i" &
        ;;
      jpg)
        $IMG "$i" &
        ;;
      gif)
        $IMG "$i" &
        ;;

      pdf)
        $PDF "$i" &
        ;;

      mp4)
        $VID "$i" &
        ;;

      m4v)
        $VID "$i" &
        ;;

      mov)
        $VID "$i" &
        ;;

      ogg)
        $MUS "$i" &
        ;;

      html)
        $BROWSER "$i" &
        ;;

      *)
        echo open: Unknown file type!
    esac
done
