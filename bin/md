#!/bin/env bash

if [ ! "$1" ]; then
  echo Usage: md name
  exit
fi

if [ ! "$GH_API_KEY" ]; then
  echo 'You need to export your GitHub API key to $GH_API_KEY!' >&2
  exit 1
fi

for pid in $(pidof -x md); do
  if [ $pid != $$ ]; then
    echo Multiple instances, quitting... >&2
    exit 1
  fi
done

suffix=$(echo "$1" | awk -F '.' '{print $NF}')

if [ "$suffix" == "$1" ]
 then file=$1.md
 else file=$1
fi

if [ ! -f "$file" ]; then
  printf "# $1" > "$file"
fi

$BROWSER localhost:6419

grip --pass $GH_API_KEY --quiet "$file" &

if [ $EDITOR == vim ]
  # Spelling (see my .vimrc)
  then vim "$file" -c SP
  else $EDITOR "$file"
fi

killall grip
