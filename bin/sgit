#!/usr/bin/env bash

cat ~/bin/sgit | grep alias | sed 's/alias//' | tail -n +2

function ll {
    git log -p --reverse $1..$2
}

alias   g='git log'
alias  gg='g --graph --oneline --all'
alias  gp='g -p'
alias gpp='clear && gp -1'

alias  k='git checkout'
alias  b='git branch'

alias cc='git rebase --continue'
alias rr='git rebase -i'
alias ab='git rebase --abort'
alias px='git cherry-pick -x'

alias  d='clear; git diff --patience'
alias ds='d --staged'

alias a='git add'
alias r='git reset'
alias w='git show'

alias  s='git status .'
alias  c="git commit -m '"
alias aa='git commit --amend'
alias bb='git branch | grep \* | cut -c 3-'

alias ts="git tag -l --format='%(contents)' $1"

alias rrm='rr master'
