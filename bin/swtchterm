#!/bin/env bash

DEFAULT=custom

profile=$1
if [ -z $profile ]; then profile=$DEFAULT; fi

TERM=~/term

if [ ! -f $TERM/$profile ]; then
  echo No such profile! >&2
  exit 1
fi

TARGET=~/.Xresources
> $TARGET

cp $TERM/HEADER $TARGET
cat $TERM/$profile >> $TARGET

xrdb $TARGET
echo "Switched urxvt config to \"$profile\""
