#!/bin/env bash

if [ "$1" == --help ] || [ "$1" == -h ]; then
  echo "Usage: term [title] [theme] [width] [height] [command]"
  exit
fi

if [ "$1" ]; then
  title=$1

  if [ "$2" ]; then
    theme=$2

    if [ "$4" ]; then
      x=$3; y=$4

      if [ "$5" ]; then cmd="-e bash -c \"$5\""; fi

    else x=80; y=24; fi
  fi
else title=term; fi

[ "$theme" ] && swtchterm $theme
urxvt -title "$title" -g ${x}x${y} -bc $cmd &
[ "$theme" ] && swtchterm
