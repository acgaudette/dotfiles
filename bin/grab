#!/usr/bin/env bash

OUT=~/grabs
EXT=png

if [ "$1" ]
  then name=$1
  else name=$(date +"%F-%H%M%S")
fi

if [ "$2" ]
  then out=$2
  else out=$OUT
fi

if [ -f "$out/$name.$EXT" ]; then
  read -p "Confirm replace $out/$name.$EXT (y/n): " -n 1 -r
  echo; if [[ ! "$REPLY" =~ ^[Yy]$ ]]; then exit; fi
fi

mkdir -p "$out"

if scrot -s "$name.$EXT"; then
  out=$(readlink -f "$out")
  [ `pwd` != "$out" ] && mv "$name.$EXT" "$out"
  echo Saved to $out
fi
