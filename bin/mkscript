#!/usr/bin/env bash

if [ ! "$1" ]; then
  echo No script name specified! >&2
  exit 1
fi

if [ ! "$2" ]
  then script=$BIN/$1
  else
    if [ -d "$2" ]
      then script=$2/$1
      else
        echo Invalid target directory! >&2
        exit 1
    fi
fi

if [ -f "$script" ]; then
  echo Script already exists! >&2
  exit 1
fi

printf '#!/usr/bin/env bash\n\n\n' > "$script"
$EDITOR "$script"; chmod +x "$script"
